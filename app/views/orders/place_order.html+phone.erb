<% content_for :javascripts do %>
  <%= javascript_include_tag "orders", 'data-turbolinks-track' => true %>
  <script type="text/javascript" src="http://api.map.baidu.com/api?v=2.0&ak=<%= Settings.baidu_ak %>"></script>
  <%= javascript_include_tag "baidu_map", 'data-turbolinks-track' => true %>
<% end %>

<div class="place-order-phone phone-page" data-city="<%= current_city %>" data-car='<%= params["order"]["car_id"] %>'>
  <%= form_tag 'submit' do %>
    <fieldset>
    <%= hidden_field_tag(:phone_num, current_user.phone_number) %>
    <%= hidden_field_tag(:city_id, current_city_id) %>
    <%= hidden_field_tag(:car_id, params["order"]["car_id"]) %>

    <div class="orders-content bac-white form-horizontal">
      <h4 class="item-title choice-address-title">选择服务地址</h4>
      <div class="address bac-white clearfix">
        <%= render "shared/select_address" %>
      </div>
      <h4 class="item-title order-info-title">订单信息 <span class="des">注：<span class="red">红色“*”</span>为必填选项</span></h4>
      <div class="info-group form-group">
        <div class="info-title">
          <var class="star">*</var>
          <%= label_tag(:name, "姓名：") %>
        </div>
        <div class="info-con">
          <%= text_field_tag(:name,'', :required => true, class: 'form-control') %>
        </div>
      </div>

      <div class="info-group form-group">
        <div class="info-title">
          <var class="star">*</var>
          <%= label_tag("车牌号：") %>
        </div>
        <div class="info-con form-inline">
          <select  name="car_location" class="form-control">
            <option value="京">京</option>
            <option value="a">京</option>
            <option value="b">京</option>
            <option value="c">京</option>
          </select>
          <%= text_field_tag(:car_num,'', :minlength => 6, :required => true, :placeholder => '车牌后六位', class: 'form-control') %>
        </div>
      </div>

      <div class="info-group form-group">
        <div class="info-title">
          <var class="star">*</var>
          <%= label_tag(:serve_datetime, "服务时间：") %>
        </div>
        <div class="info-con form-inline">
          <%= text_field_tag(:serve_datetime, '', :required => true, class: 'form-control') %>
          <select name="serve_period" class='form-control'>
            <option value="8:00-12:00">8:00 - 12:00</option>
            <option value="8:00-12:00">8:00 - 12:00</option>
            <option value="8:00-12:00">8:00 - 12:00</option>
          </select>
        </div>
      </div>

      <div class="info-group form-group">
        <div class="info-title">
          <var class="star">*</var>
          <%= label_tag(:pay_type, "付款方式：") %>
        </div>
        <div class="info-con">
          <select id="pay_type" name="pay_type" class='form-control'>
            <option value="0">现金</option>
            <option value="1">刷卡</option>
          </select>
        </div>
      </div>

      <div class="info-group form-group">
        <div class="info-title">
          <var class="star">*</var>
          <%= label_tag(:registration_date, "车辆注册时间：") %>
        </div>
        <div class="info-con">
          <%= text_field_tag(:registration_date,'', :required => true, class: 'form-control') %>
        </div>
      </div>

      <div class="info-group form-group">
        <div class="info-title">
          <%= label_tag(:engine_num, "发动机号码：") %>
        </div>
        <div class="info-con">
          <%= text_field_tag(:engine_num,'', class: "form-control") %>
        </div>
      </div>

      <div class="info-group form-group">
        <div class="info-title">
          <%= label_tag(:vin, "VIN：") %>
        </div>
        <div class="info-con">
          <%= text_field_tag(:vin,'', class: 'form-control') %>
        </div>
      </div>

      <hr>

      <div class="info-group form-group">
          <div class="info-title">
            <%= label_tag("发票：") %>
          </div>
          <div class="info-con">
            <div class="btn-group" data-toggle="buttons">
              <label class="btn btn-default active" id="no_invoice">
                <input type="radio" autocomplete="off" checked> 不要
              </label>
              <label class="btn btn-default" id="yes_invoice">
                <input type="radio" autocomplete="off"> 需要
              </label>
            </div>
          </div>
        </div>

        <div class="info-group form-group">
          <div id="invoice_info" class="collapse">
            <div class="info-title">
              <%= label_tag("详细信息：") %>
            </div>

            <div class="input-group reciept-detail col-sm-6">

              <span class="input-group-addon">
                <label>
                  <input type="radio" value='1' name="reciept_type" autocomplete="off"> 个人
                </label>
              </span>

              <span class="input-group-addon">
                <label>
                  <input type="radio" value='2' name="reciept_type" autocomplete="off"> 单位
                </label>
              </span>

              <input type="text" class='form-control' name="reciept_title" placeholder="发票抬头">
            </div>
          </div>
        </div>




        <div class="info-group form-group">
          <div class="info-title">
            <%= label_tag("优惠券：") %>
          </div>

          <div class="info-con">
            <div class="btn-group" data-toggle="buttons">
              <label class="btn btn-default active" id="no_preferential">
                <input type="radio" autocomplete="off" checked> 无
              </label>
              <label class="btn btn-default" id="yes_preferential">
                <input type="radio" autocomplete="off"> 有
              </label>
            </div>
          </div>

        </div>

        <div class="info-group form-group">
          <div id="preferential_info" class="collapse">
            <div class="info-title">
              <%= label_tag("详细信息：") %>
            </div>

            <div class="info-con form-inline">
              <input type="text" name="discount" class='form-control' placeholder="优惠码" id="preferential_code">
              <%= link_to "验证", "#", class: "btn btn-default", id: "validate_preferential" %>
            </div>
          </div>
        </div>

      <div class="info-group form-group">
        <div class="info-title">
          <%= label_tag(:client_comment, "备注：") %>
        </div>
        <div class="info-con">
          <%= text_area(:input_clinet_title, '填写备注', class: 'form-control') %>
        </div>
      </div>
      <h4 class="item-title">商品详情</h4>
      <%= render "offer_table" %>
      <div class="submit-con">
        <span>当前费用: <span class="result-price" id="result_price"> <%= @result['price'] %></span>元</span>
        <%= submit_tag("提交订单",:class => 'submit bac-white btn btn-default order_button') %>
        <p>支持现金、刷卡支付</p>
      </div>
    </div>
    </fieldset>
  <% end %>

</div>

<%= render "shared/add_address_modal" %>
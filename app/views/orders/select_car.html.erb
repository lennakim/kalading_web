<% content_for :javascripts do %>
  <%= javascript_include_tag "orders", 'data-turbolinks-track' => true %>
<% end %>
<%= title "创建订单" %>

<div class="main select-car-page">
  <ul class="process">
    <li class="car-type selected">选择车型</li>
    <li class="service">选择服务</li>
    <li class="info">填写信息</li>
    <li class="success">预定成功</li>
  </ul>
  <div class="select-item bac-white">
    <div class="select-car">
      <h4>查询车辆</h4>
      <div class="field">
        <label for="car_name">品牌</label>
        <select data-cars="<%= @cars_info %>" name="car_name" id="car_name">
          <% @cars_info.each do |car| %>
            <option value="<%= car['name'] %>">
              <%= car['name'] %>
            </option>
          <% end %>
        </select>
      </div>
      <div class="field"> 
        <label for="car_type">系列</label>
        <select name="car_type" id="car_type">
          <% @cars_info.each do |car| %>
            <% car['ams'].each do |type| %>
              <option value="<%= type['name'] %>" class="<%= car['name'] %>">
                <%= type['name'] %>
              </option>
            <% end %>
          <% end %>
        </select>
      </div> 
      <div class="field">
        <label for="car_style">型号</label>
        <select name="car_style" id="car_style">
          <% @cars_info.each do |car| %>
            <% car['ams'].each do |type| %>
              <% type['asms'].each do |style| %>
                <option value="<%= style['name'] %>" data-id="<%= style['_id'] %>" class="<%= car['name'] %>\<%= type['name'] %>">
                  <%= style['name'] %>
                </option>
              <% end %>
            <% end %>
          <% end %>
        </select>
      </div>
      <p>
        <button class="search_button bac-orange font-white">下一步</button>
        <a class="more" href="">没找到车型？</a>
      </p>
    </div>
    <div class="quick-select">
      <h4>我的快捷车辆</h4>
      <div class="my-car selected">
        <%= check_box_tag :car1,'',:checked => 'checked' %>
        <%= label_tag(:car1, "宝马（进口）") %>
      </div>
      <div class="my-car">
        <%= check_box_tag :car2 %>
        <%= label_tag(:car2, "奔驰（北京）") %>
      </div>
      <button class="search_button bac-orange font-white">下一步</button>
    </div>
  </div>
  <div class="comment">
    <h3 class="comment-title">用户评价</h3>
    <div class="comment-con bac-white"></div>
  </div> 
</div>


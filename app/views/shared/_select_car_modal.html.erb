<div class="modal fade" id="select_car_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">

        <div class="modal-header">
          <h4 class="modal-title">添加车辆</h4>
        </div>

        <%= render "shared/select_car" %>


        <div class="form-horizontal">

          <div class="form-group">
            <label for="car_name" class="col-sm-3 control-label">车牌号: </label>
            <div class="form-inline col-sm-8">
              <select name="car_location" class="form-control">
                <option value="京">京</option>
                <option value="a">京</option>
                <option value="b">京</option>
                <option value="c">京</option>
              </select>

              <input type="text" class="form-control">
            </div>
          </div>

          <div class="form-group">
            <label for="car_name" class="col-sm-3 control-label">注册日期: </label>
            <div class="col-sm-8">

              <input type="text" class='form-control' id="registration_date">
            </div>
          </div>

          <div class="form-group">
            <label for="car_name" class="col-sm-3 control-label">引擎号: </label>
            <div class="col-sm-8">

              <input type="text" class='form-control'>
            </div>
          </div>
          <div class="form-group">
            <label for="car_name" class="col-sm-3 control-label">VIN: </label>
            <div class="col-sm-8">

              <input type="text" class='form-control'>
            </div>
          </div>
        </div>

        <!-- TODO -->
        <div class="add-car">
          <button class='btn btn-default orange-btn'>添加</button>
        </div>
      </div>
    </div>
  </div>
</div>

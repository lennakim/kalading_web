<div class="modal fade" id="add_address_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">

        <div class="modal-header">
          <h4 class="modal-title">服务地址</h4>
        </div>

        <div class="address-inputs">

          <label class="control-label">所在地区: </label>

          <div class="form-inline">

            <div class="form-group">
              <select id="service_cities" class="form-control city" name="">
                <% @cities.each do |city| %>
                  <option value="<%= city["name"] %>" <%= "selected" if city["name"].match(current_city_name) %>><%= city["name"] %> </option>
                <% end %>
              </select>
            </div>

            <div class="form-group">
              <select id="service_districts" class="form-control district" name="">
                <% @cities.each do |city| %>
                  <% city["districts"].each do |district| %>
                    <option value="<%= district["name"] %>" class='<%= city["name"] %>'><%= district["name"] %></option>
                  <% end %>
                <% end %>
              </select>
            </div>
          </div>

          <div class="form-inline">
            <div class="form-group">
              <label for="address_detail" class="control-label">详细地址: </label>
              <div class="">
                <input type="text" class="form-control" id="address_detail">
                <div id="searchResultPanel" style="border:1px solid #C0C0C0;width:150px;height:auto; display:none;"></div>
              </div>
            </div>
          </div>
        </div>

        <div class="add-address">
          <button class='btn btn-default orange-btn'>添加</button>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="add_address_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">

        <div class="modal-header">
          <h4 class="modal-title">添加地址</h4>
        </div>

        <div class="form-horizontal address-inputs">
          <div class="form-group form-inline">
            <label class="col-sm-2 control-label">所在地区: </label>
            <div class="col-sm-8">

              <select id="service_cities" class="form-control city" name="">
                <% @cities.each do |city| %>
                  <option value="<%= city["name"] %>"><%= city["name"] %></option>
                <% end %>
              </select>

              <select id="service_districts" class="form-control district" name="">
                <% @cities.each do |city| %>
                  <% city["districts"].each do |district| %>
                    <option value="<%= district["name"] %>" class='<%= city["name"] %>'><%= district["name"] %></option>
                  <% end %>
                <% end %>
              </select>

            </div>
          </div>
          <div class="form-group">
            <label for="address_detail" class="col-sm-2 control-label">详细地址: </label>
            <div class="col-sm-6">
              <input type="text" class="form-control" id="address_detail" data-address="<%= "#{@cities.first["name"]}#{@cities.first["districts"].first["name"]}" %>">
              <div id="searchResultPanel" style="border:1px solid #C0C0C0;width:150px;height:auto; display:none;"></div>
            </div>
          </div>
        </div>

        <div class="add-address">
          <button class='btn btn-default orange-btn'>添加</button>
        </div>
      </div>
    </div>
  </div>
</div>

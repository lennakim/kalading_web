<%= title "我的订单" %>

<div class="container user-info">

  <div class="row">
    <div class="col-md-12 title">
      个人中心
    </div>
  </div>

  <div class="row">

    <div class="col-md-3">
      <ul class='menu'>
        <li class='active'>我的订单</li>
        <li>车辆信息</li>
        <li>个人信息</li>
      </ul>
    </div>

    <div class="col-md-9 content">
      <div class="orders">
        <% @orders.each do |order| %>
          <div class="order">
            <div class="top clearfix">
              <div class="datetime pull-left">
                <%= order["serve_datetime"] %>
              </div>
              <div class="number pull-left">
                订单号: <%= order['seq'] %>
              </div>
            </div>
            <div class="order-detail clearfix">

              <div class="pull-left">
                <div class="order-title">
                  <%= order["auto_model"] %> 上门保养
                </div>

                <div class="items">
                  <% order["parts"].each do |part| %>
                    <div class="item">
                      [<%= part["type"] %>] <%= part["brand"] %>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="order-price pull-left">
                <%= order["price"] %> 元
              </div>

              <div class="comment pull-left">
                <div class="cmt">
                  <%= link_to "评价", "#", class: "btn btn-default orange-button" %>
                </div>
                <div class="order-status">
                  <%= link_to "订单状态", "#" %>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>


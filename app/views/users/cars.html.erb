<%= title "车辆信息" %>

<div class="container user-info cars">

  <div class="row">
    <div class="col-md-12 title">
      车辆信息
    </div>
  </div>

  <div class="row">

    <%= render "users/menu" %>
    <div class="col-md-9 content">
      <div class="select-car">
        <div class="header">
          选择车辆
        </div>
        <div class="cars clearfix">

          <div class="car pull-left">
            宝马
          </div>

          <div class="car pull-left">
            奥迪
          </div>

          <div class="car pull-left">
            <%= link_to "+ 添加车辆", "#", id: "add_car" %>
          </div>
        </div>
      </div>

      <div class="maintain-histories">
        <div class="header">
          车辆保养记录
        </div>
        <div class="cards clearfix">
          <% @maintain_histories.each do |maintain_history| %>
            <div class="card pull-left">
              <div class="serve-datetime">
                <%= maintain_history["serve_datetime"] %>
              </div>

              <div class="report">
                <div class="car-num">
                  车牌号: <%= maintain_history["car_num"] %>
                </div>

                <div class="show">
                  <button>体检报告单</button>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="select_car_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">

        <div class="modal-header">
          <h4 class="modal-title">添加车辆</h4>
        </div>

        <div class="form-horizontal selectors">

          <div class="form-group">
            <label for="car_name" class="col-sm-2 control-label">品牌: </label>
            <div class="col-sm-10">
              <select name="car_name" id="car_name" class="form-control">
                <% @cars_info.each do |car| %>
                  <option value="<%= car['name'] %>">
                    <%= car['name'] %>
                  </option>
                <% end %>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label for="car_type" class="col-sm-2 control-label">系列: </label>
            <div class="col-sm-10">
              <select name="car_type" id="car_type" class="form-control">
                <% @cars_info.each do |car| %>
                  <% car['ams'].each do |type| %>
                    <option value="<%= type['name'] %>" class="<%= car['name'] %>">
                      <%= type['name'] %>
                    </option>
                  <% end %>
                <% end %>
              </select>
            </div>
          </div>

          <div class="form-group">
            <label for="car_style" class="col-sm-2 control-label">型号: </label>
            <div class="col-sm-10">
              <select name="car_style" id="car_style" class="form-control">
                <% @cars_info.each do |car| %>
                  <% car['ams'].each do |type| %>
                    <% type['asms'].each do |style| %>
                      <option value="<%= style['name'] %>" data-id="<%= style['_id'] %>" class="<%= car['name'] %>\<%= type['name'] %>">
                        <%= style['name'] %>
                      </option>
                    <% end %>
                  <% end %>
                <% end %>
              </select>
            </div>
          </div>
        </div>

        <div class="add-car">
          <button class='btn btn-default orange-btn'>添加</button>
        </div>
      </div>
    </div>
  </div>
</div>

<%= @maintain_histories %>

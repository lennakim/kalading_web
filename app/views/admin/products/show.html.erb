<div class="container">

  <p id="notice"><%= notice %></p>

  <table class='table'>
    <tr>
      <td>名称</td>
      <td><%= resource.title %></td>
    </tr>
    <tr>
      <td>短简介(在首页展示)</td>
      <td><%= resource.description %></td>
    </tr>
    <tr>
      <td>slug(用于url中的type=pm25)</td>
      <td><%= resource.slug %></td>
    </tr>
    <tr>
      <td>使用城市</td>
      <td><%= resource.cities.map(&:name).join(' | ')%></td>
    </tr>
  </table>

  <%= link_to 'Edit', edit_admin_product_path(resource) %> |
  <%= link_to 'Back', admin_products_path %>

</div>

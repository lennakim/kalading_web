<div class="container">
  <%= form_for [:admin, resource] do |f| %>
    <% if resource.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(resource.errors.count, "error") %> prohibited this admin_channel from being saved:</h2>

        <ul>
        <% resource.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="actions">

      <table class="table">
        <tr>
          <td>标题</td>
          <td><%= f.text_field :title %></td>
        </tr>

        <tr>
          <td>简介</td>
          <td><%= f.text_field :description %></td>
        </tr>

        <tr>
          <td>slug</td>
          <td><%= f.text_field :slug %></td>
        </tr>

        <tr>
          <td>适用城市</td>
          <td>

            <% City.all.each do |city| %>
              <%= city.name %>
              <%= check_box_tag "product[city_ids][]", city.id, resource.cities.include?(city) %>
            <% end %>

          </td>
        </tr>

        <tr>
          <td colspan=2><%= f.submit %></td>
        </tr>

      </table>

    </div>
  <% end %>
</div>

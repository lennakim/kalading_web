<div class="container">
  <table class='table'>
    <thead>
      <tr>
        <th>名称</th>
        <th>简介</th>
        <th>Slug</th>

        <th>展示</th>
        <th>编辑</th>
        <th>删除</th>
      </tr>
    </thead>

    <tbody>
      <% collection.each do |product| %>
        <tr>

          <td><%= product.title %></td>
          <td><%= product.description %></td>
          <td><%= product.slug %></td>

          <td><%= link_to 'Show', admin_product_path(product) %></td>
          <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
          <td><%= link_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to '创建', new_admin_product_path %>
</div>

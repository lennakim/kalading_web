<div class="container">
<%= form_for [:admin, @reply_message] do |f| %>
  <% if @reply_message.errors.any? %>
    <div id="error_explanation" class="for-group has-error">
      <h2><%= pluralize(@reply_message.errors.count, "error") %> prohibited this reply_message from being saved:</h2>
      <ul>
        <% @reply_message.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label>关键字</label>
    <%= f.text_field :keyword, class: 'form-control' %>
  </div>

  <div class="form-group">
    <label>类型</label>
    <%= f.text_field :msg_type, readonly: true,class: 'form-control' %>
  </div>

  <div class="submit-btn">
      <%= f.submit '保存' , class: 'btn btn-default' %>
  </div>

<% end %>

  <%= link_to "返回", admin_reply_messages_path %>
</div>
